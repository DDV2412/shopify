<section class="section_component">
  <div class="container">
    <div
      data-w-id="d9f7959d-a9b5-9387-cac8-6e7c88cfae4d"
      style="opacity: 1; transform: translate3d(0px, 0px, 0px) scale3d(1, 1, 1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg, 0deg); transform-style: preserve-3d;"
      class="reviews-wrapper">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'heading' %}
            <h2>{{ block.settings.heading }}</h2>
          {% when 'text' %}
            <div class="review-wrapper">
              <div class="description">{{ block.settings.text }}</div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Section Title",
    "blocks": [
      {
        "type": "heading",
        "name": "Title Heading",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "t:sections.section-title.blocks.heading.settings.heading.label"
          }
        ]
      }, {
        "type": "text",
        "name": "Sub Heading",
        "limit": 1,
        "settings": [
          {
            "type": "richtext",
            "id": "text",
            "label": "t:sections.section-title.blocks.text.settings.text.label"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Section Title",
        "blocks": [
          {
            "type": "heading"
          }, {
            "type": "text"
          }
        ]
      }
    ]
  }
{% endschema %}