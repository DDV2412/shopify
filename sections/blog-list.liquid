{%  assign blog_param =  blog.handle %}

{% paginate blogs[blog_param].articles by 12 %}
<section class="ssection_component is-hero  background-white">
  <div class="container">
    <div class="landing-content-wrapper">
      <div
        data-w-id="bc17c2cb-6525-3fb7-007c-e2d8a05c12d5"
        style="opacity: 1; transform: translate3d(0px, 0px, 0px) scale3d(1, 1, 1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg, 0deg); transform-style: preserve-3d;"
        class="content-section padding-0">

        {% for article in blogs[blog_param].articles %}
            {% if forloop.index == 1 %}
                <div class="offplan-hero">
                    <div id="w-node-bc17c2cb-6525-3fb7-007c-e2d8a05c12d7-732b4aee" class="hero_content is-offplan">
                        <h1>{{ article.title }}</h1>
                        <div class="develop-summary">{{ article.content }}</div>
                        <a href="{{ article.url }}" class="button is-secondary rounded w-inline-block">
                            <div>Continue Reading</div>
                        </a>
                    </div>
                    <div id="w-node-bc17c2cb-6525-3fb7-007c-e2d8a05c12e5-732b4aee" class="hero_content">
                        <div id="w-node-bc17c2cb-6525-3fb7-007c-e2d8a05c12b7-732b4aee" class="hero_content">
                                <img
                                src="{{ article.image | img_url : 'original'}}"
                                loading="lazy"
                                alt="{{ article.title }}"
                                width="700"
                                height="500"
                                class="hero-image">
                            </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>


<section class="section_component">
  <div class="container">
    <div class="section_title-wrapper">
      <div data-w-id="d32fc49e-95c7-35af-56f3-162b3ad4cc8e" class="blog-grid">
        {% for article in blogs[blog_param].articles %}
            {% if forloop.index > 1 %}
                <a id="w-node-a07ff5be-ff10-9d67-7e0b-0ab3038fffa4-5902b714" href="{{article.url}}"
                    class="article-card w-inline-block">
                    <div data-w-id="a07ff5be-ff10-9d67-7e0b-0ab3038fffa5" class="article_thumbnail-wrapper"><img
                        src="{{article.image | img_url : 'original'}}" loading="lazy" width="318" height="160"
                        alt="{{article.title}}"
                        style="-webkit-transform:translate3d(0, 0, 0) scale3d(1, 1, 1) rotateX(0) rotateY(0) rotateZ(0) skew(0, 0);-moz-transform:translate3d(0, 0, 0) scale3d(1, 1, 1) rotateX(0) rotateY(0) rotateZ(0) skew(0, 0);-ms-transform:translate3d(0, 0, 0) scale3d(1, 1, 1) rotateX(0) rotateY(0) rotateZ(0) skew(0, 0);transform:translate3d(0, 0, 0) scale3d(1, 1, 1) rotateX(0) rotateY(0) rotateZ(0) skew(0, 0)"
                        class="article-image"></div>
                    <div class="article_detail">
                    <div>{{article.title}}</div>
                    </div>

                    <div class="article-date">{{
                    article.published_at | date: '%b %d, %Y' }}</div>
                </a>
            {% endif %}
        {% endfor %}

      </div>
      {% if paginate.page < 1 %}
        <div data-w-id="e2af74cb-a8cf-fb62-51e6-6b6486e095eb" style="opacity: 0;" class="load-more-wrap">
                <a href="{{ paginate.previous.url }}"
                    class="button is-secondary is-results-btn is-left w-inline-block">
                    <div class="icon_small w-embed"><svg xmlns="http://www.w3.org/2000/svg" width="17" height="16"
                            fill="none" viewBox="0 0 17 16">
                            <path stroke="#ADB4AF" stroke-linecap="round" stroke-linejoin="round" d="M11 13 6 8l5-5"></path>
                        </svg></div>
                    <p class="pagination_title">Back</p>
                </a>
                <div class="pages-count">
                    <p class="paragraph">Page</p>
                    <div class="select-wrapper no-border">
                        <div data-hover="false" data-delay="0" class="buy_select-wrapper w-dropdown">
                            <div class="control-select w-dropdown-toggle" id="w-dropdown-toggle-14"
                                aria-controls="w-dropdown-list-14" aria-haspopup="menu" aria-expanded="false" role="button"
                                tabindex="0">
                                <div>{{ paginate.page }}</div>
                                <div class="icon_small w-embed">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24"
                                        height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                        stroke-linecap="round" stroke-linejoin="round"
                                        class="icon icon-tabler icons-tabler-outline icon-tabler-chevron-down">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                        <path d="M6 9l6 6l6 -6"></path>
                                    </svg>
                                </div>
                            </div>
                            <nav class="property-list w-dropdown-list" id="w-dropdown-list-14"
                                aria-labelledby="w-dropdown-toggle-14">
                                {% for i in (1..paginate.pages) %}
                                    <a href="{{ paginate.page_number[i].url }}" class="page-count w-dropdown-link {% if paginate.page == i %}active{% endif %}" tabindex="0">
                                        {{ i }}
                                    </a>
                                {% endfor %}
                                </nav>
                        </div>
                    </div>
                    <p class="paragraph">of {{ paginate.pages }}</p>
                </div>
                <a href="{{ paginate.next.url }}" class="button is-secondary is-results-btn is-right w-inline-block">
                    <p class="pagination_title">Next</p>
                    <div class="icon_small w-embed">
                        <svg xmlns="http://www.w3.org/2000/svg" width="17" height="16"
                            fill="none" viewBox="0 0 17 16">
                            <path stroke="#ADB4AF" stroke-linecap="round" stroke-linejoin="round" d="m6 3 5 5-5 5"></path>
                        </svg>
                    </div>
                </a>
            </div>
      {% endif %}
    </div>
  </div>
</section>
{% endpaginate %}

