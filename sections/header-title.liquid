<section class="section_component {%- if section.settings.is_hero -%}  is-hero {%- endif -%} background-white">
  <div class="container">
    <div class="landing-content-wrapper">
      <div
        data-w-id="7bc9fdea-201a-4548-cce7-ab796688bc7d"
        style="opacity:0"
        class="content-section padding-0">
        {% for block in section.blocks %}
          {% if block.type == 'heading' %}
            <h1>{{ block.settings.heading }}</h1>
          {% elsif block.type == 'text' %}
            <div class="description">{{ block.settings.text }}</div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Header Title",
    "settings": [
      {
        "type": "checkbox",
        "id": "is_hero",
        "label": "t:sections.header-title.settings.is_hero.label"
      }
    ],
    "blocks": [
      {
        "type": "heading",
        "name": "Title Heading",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "t:sections.header-title.blocks.heading.settings.heading.label"
          }
        ]
      }, {
        "type": "text",
        "name": "Sub Heading",
        "limit": 1,
        "settings": [
          {
            "type": "richtext",
            "id": "text",
            "label": "t:sections.header-title.blocks.text.settings.text.label"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Header Title",
        "blocks": [
          {
            "type": "heading"
          }, {
            "type": "text"
          }
        ]
      }
    ]
  }
{% endschema %}