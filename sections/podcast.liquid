<section class="section_component">
    <div class="container">
        <div class="property-card-wrapper-main">
            <div data-w-id="bc17c2cb-6525-3fb7-007c-e2d8a05c1327"
                style="opacity: 1; transform: translate3d(0px, 0px, 0px) scale3d(1, 1, 1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg, 0deg); transform-style: preserve-3d;"
                class="res-offplan-container">
                {%- for block in section.blocks -%}
                    {%- case block.type -%}
                        {%- when "heading" -%}
                        <h2>{{ block.settings.heading }}</h2>

                        {%- when "text" -%}
                        <div class="description">
                            {{ block.settings.description }}
                        </div>
                    {%- endcase -%}
                {%- endfor -%}
                <div class="slick-slider-wrapper">
                    <div data-delay="4000" data-animation="slide" class="slick-slider w-slider" data-autoplay="false"
                        data-easing="ease" data-hide-arrows="false" data-disable-swipe="false" data-autoplay-limit="0"
                        data-nav-spacing="3" data-duration="500" data-infinite="true" role="region"
                        aria-label="carousel">
                        <div class="w-slider-mask" id="w-slider-mask-5">
                            {% for article in blogs.podcast.articles %}
                                     <div class="article-slide w-slide">
                  <a
                    id="w-node-a07ff5be-ff10-9d67-7e0b-0ab3038fffa4-5902b714"
                    href="{{ article.url }}"
                    class="article-card w-inline-block">
                    <div data-w-id="a07ff5be-ff10-9d67-7e0b-0ab3038fffa5" class="article_thumbnail-wrapper"><img
                        src="{{article.image | img_url : 'original'}}"
                        loading="lazy"
                        width="318"
                        height="160"
                        alt="{{article.title}}"
                        style="-webkit-transform:translate3d(0, 0, 0) scale3d(1, 1, 1) rotateX(0) rotateY(0) rotateZ(0) skew(0, 0);-moz-transform:translate3d(0, 0, 0) scale3d(1, 1, 1) rotateX(0) rotateY(0) rotateZ(0) skew(0, 0);-ms-transform:translate3d(0, 0, 0) scale3d(1, 1, 1) rotateX(0) rotateY(0) rotateZ(0) skew(0, 0);transform:translate3d(0, 0, 0) scale3d(1, 1, 1) rotateX(0) rotateY(0) rotateZ(0) skew(0, 0)"
                        class="article-image"></div>
                    <div class="article_detail">
                      <div>{{ article.title }}</div>
                    </div>

                    <div class="article-date">{{
article.published_at | date: '%b %d, %Y' }}</div>
                  </a>
                </div>
                            {%- endfor -%}
                            <div aria-live="off" aria-atomic="true" class="w-slider-aria-label" data-wf-ignore=""></div>
                        </div>
                        <div class="left-arrow w-slider-arrow-left" role="button" tabindex="0"
                            aria-controls="w-slider-mask-5" aria-label="previous slide">
                            <div class="arrow-wrapper">
                                <div class="icon w-embed"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                                        fill="none" viewBox="0 0 20 20">
                                        <path stroke="#083819" stroke-linecap="round" stroke-linejoin="round"
                                            d="M13.125 16.25 6.875 10l6.25-6.25"></path>
                                    </svg></div>
                            </div>
                        </div>
                        <div class="right-arrow w-slider-arrow-right" role="button" tabindex="0"
                            aria-controls="w-slider-mask-5" aria-label="next slide">
                            <div class="arrow-wrapper">
                                <div class="icon w-embed"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                                        fill="none" viewBox="0 0 20 20">
                                        <path stroke="#083819" stroke-linecap="round" stroke-linejoin="round"
                                            d="m6.875 3.75 6.25 6.25-6.25 6.25"></path>
                                    </svg></div>
                            </div>
                        </div>
                        <div class="slide-nav w-slider-nav w-round w-num">
                            <div class="w-slider-dot w-active" data-wf-ignore="" aria-label="Show slide 1 of 2"
                                aria-pressed="true" role="button" tabindex="0"
                                style="margin-left: 3px; margin-right: 3px;">1</div>
                            <div class="w-slider-dot" data-wf-ignore="" aria-label="Show slide 2 of 2"
                                aria-pressed="false" role="button" tabindex="-1"
                                style="margin-left: 3px; margin-right: 3px;">2</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
  {
    "name": "Podcast",
    "blocks": [
      {
        "type": "heading",
        "name": "Heading",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "t:sections.podcast.blocks.heading.settings.heading.label",
            "default": "t:sections.podcast.blocks.heading.settings.heading.default"
          }
        ]
      }, {
        "type": "text",
        "name": "Description",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "description",
            "label": "t:sections.podcast.blocks.text.settings.text.label",
            "default": "t:sections.podcast.blocks.text.settings.text.default"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Podcast",
        "blocks": [
          {
            "type": "heading"

          }, {
            "type": "text"

          }
        ]
      }
    ]
  }
{% endschema %}