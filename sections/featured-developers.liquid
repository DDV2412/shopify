<section class="section_component">
  <div class="container">
    <div class="property-card-wrapper-main">
      <div
        data-w-id="bc17c2cb-6525-3fb7-007c-e2d8a05c1327"
        style="opacity: 1; transform: translate3d(0px, 0px, 0px) scale3d(1, 1, 1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg, 0deg); transform-style: preserve-3d;"
        class="res-offplan-container">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when "heading" -%}
              <h2>{{ block.settings.heading }}</h2>
          {%- endcase -%}
        {%- endfor -%}
        <div
          data-w-id="7f027436-e28f-3689-c57e-3d1e46693187"
          style="opacity: 1; transform: translate3d(0px, 0px, 0px) scale3d(1, 1, 1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg, 0deg); transform-style: preserve-3d;"
          class="developer-list-feature">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when "collection" -%}
                <div id="w-node-_50ae9d5c-a22f-91a7-0666-bb54d47f0035-732b4aee" class="offplan-feature-item">
                  <div class="image-section _2">
                    <img
                      src="{{ block.settings.dev_image | img_url : 'original' }}"
                      loading="lazy"
                      alt=""
                      class="image-section _2"
                      width="443"
                      height="268">
                    <div class="developer-image">
                      <img
                        src="{{ collections[block.settings.dev_collection].featured_image | img_url : 'original' }}"
                        loading="lazy"
                        alt=""
                        class="image-section _2 developer-logo is-small"
                        width="100"
                        height="42">
                    </div>
                  </div>
                  <div class="developer-content-section">
                    <h3>{{ collections[block.settings.dev_collection].title }}</h3>
                    <p class="develop-summary">{{ block.settings.dev_description }}</p>
                  </div>
                </div>
            {%- endcase -%}
          {%- endfor -%}

        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Featured Developers",
    "blocks": [
      {
        "type": "heading",
        "name": "Heading",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "t:sections.featured-developers.blocks.heading.settings.heading.label",
            "default": "t:sections.featured-developers.blocks.heading.settings.heading.default"
          }
        ]
      }, {
        "type": "collection",
        "name": "Collection Developers",
        "limit": 3,
        "settings": [
          {
            "type": "text",
            "id": "dev_collection",
            "label": "t:sections.featured-developers.blocks.collection.settings.collection.label"
          }, {
            "type": "image_picker",
            "id": "dev_image",
            "label": "t:sections.featured-developers.blocks.collection.settings.image.label"
          }, {
            "type": "richtext",
            "id": "dev_description",
            "label": "t:sections.featured-developers.blocks.collection.settings.text.label"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Featured Developers",
        "blocks": [
          {
            "type": "heading"

          }, {
            "type": "collection"

          }
        ]
      }
    ]
  }
{% endschema %}