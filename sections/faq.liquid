<section class="section_faq {% if template != 'index' %} background-white {% endif %}">
  <div class="container">
    <div class="faq-wrapper">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <h2 data-w-id="f73b16f2-ed5b-0d41-7358-0d1b4c6ed194">{{ block.settings.heading }}</h2>
        {%- endcase -%}
      {%- endfor -%}
      <div data-w-id="f73b16f2-ed5b-0d41-7358-0d1b4c6ed197" class="faq_component">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'text' -%}
              <div data-w-id="f73b16f2-ed5b-0d41-7358-0d1b4c6ed198" class="faq_content">
                <div class="faq_title">
                  <div>{{ block.settings.question }}</div>
                  <div class="faq_icon">
                    <div class="plus_icon vertical"></div>
                    <div class="plus_icon horizontal"></div>
                  </div>
                </div>
                <div class="answer-wrapper">
                  <div class="answer-text">
                    <p>{{ block.settings.answer }}</p>
                  </div>
                </div>
              </div>
          {%- endcase -%}
        {%- endfor -%}

      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "FAQ",
    "blocks": [
      {
        "type": "heading",
        "name": "Heading Block",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "t:sections.faq.blocks.heading.settings.heading.label"
          }
        ]
      }, {
        "type": "text",
        "name": "FAQ Item",
        "settings": [
          {
            "type": "text",
            "id": "question",
            "label": "t:sections.faq.blocks.text.settings.question.label"
          }, {
            "type": "richtext",
            "id": "answer",
            "label": "t:sections.faq.blocks.text.settings.answer.label"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "FAQ",
        "blocks": [
          {
            "type": "heading"
          }, {
            "type": "text"
          }
        ]
      }
    ]
  }
{% endschema %}