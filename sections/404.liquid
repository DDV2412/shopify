<section class="section_component">
  <div class="container">
    <div class="section_title-wrapper">
      <div class="blog-wrapper notfound-wrapper">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
              <h1 class="notfount_title">{{ block.settings.heading }}</h1>
            {%- when 'text' -%}
              <div>{{ block.settings.text }}</div>
            {%- when 'button' -%}
              <div class="button-wrapper padding-top-medium">
                <a href="{{shop.url}}" class="button w-inline-block">
                  <div>{{ block.settings.home_title }}</div>
                </a>
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Not Found",
    "blocks": [
      {
        "type": "heading",
        "name": "Heading Block",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "t:sections.404.blocks.heading.settings.heading.label"
          }
        ]
      }, {
        "type": "text",
        "name": "Text Block",
        "limit": 1,
        "settings": [
          {
            "type": "richtext",
            "id": "text",
            "label": "t:sections.404.blocks.text.settings.text.label"
          }
        ]
      }, {
        "type": "button",
        "name": "Back to Home",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "home_title",
            "label": "t:sections.404.blocks.button.settings.text.label",
            "default": "t:sections.404.blocks.button.settings.text.default"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Not Found",
        "blocks": [
          {
            "type": "heading"
          }, {
            "type": "text"
          }, {
            "type": "button"
          }
        ]
      }
    ]
  }
{% endschema %}